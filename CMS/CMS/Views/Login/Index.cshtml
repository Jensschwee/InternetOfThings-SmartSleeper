@{
}
@model CMS.Models.LoginModel
<title>ViewData.title</title>
@if (ViewData["ErrorMsg"] != null)
{
    <div class="alert alert-warning">
        <strong>@ViewData["ErrorMsg"] </strong>
    </div>
}
<div>
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
        <div>
            <div class="form-group">
                <label class="form-inline" for="txtUsername">Username</label>
                <input class="form-control" type="text" asp-for="Username" id="txtUsername" placeholder="Username" required />
            </div>
            <div class="form-group">
                <label class="form-inline" for="txtPassword">Password</label>
                <input class="form-control" type="password" asp-for="Password" id="txtPassword" placeholder="Password" required />
            </div>
            <div>
                <input type="submit" class="btn btn-primary" value="Login"/>
                <input type="button" class="btn btn-default" value="Register" onclick="@("window.location.href='" + @Url.Action("UserRegister", "User") + "'");"/>
            </div>
        </div>
    }
</div>
