@{
}
@model CMS.Models.LoginModel
<title>ViewData.title</title>

<div>
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
        <div>
            <div class="form-group">
                <label class="form-inline" for="txtUsername">Username</label>
                <input class="form-control" type="text" asp-for="Username" id="txtUsername" placeholder="Username" required />
            </div>
            <div class="form-group">
                <label class="form-inline" for="txtPassword">Password</label>
                <input class="form-control" type="password" asp-for="Password" id="txtPassword" required />
            </div>
            <div>
                <input type="submit" class="btn-primary" value="Logion" />
            </div>
        </div>
    }
</div>
