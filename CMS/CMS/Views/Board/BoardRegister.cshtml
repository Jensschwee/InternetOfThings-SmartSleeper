@using CMS.Models
@model CMS.Models.BoardModel

<h1>Board Register</h1>

@using (Html.BeginForm("BoardRegister", "Board", FormMethod.Post))
{
    <div class="form-horizontal">
        <div class="form-group">
            <label asp-for="device_name" class="col-md-2 control-label">Device Name</label>
            <div class="col-md-10">
                <input asp-for="device_name" class="form-control" placeholder="Type your device name" />
                <span asp-validation-for="device_name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="deviceID" class="col-md-2 control-label">Device ID</label>
            <div class="col-md-10">
                <input asp-for="deviceID" class="form-control" placeholder="Type your device id" />
                <span asp-validation-for="deviceID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Register" class="btn btn-default" />
            </div>
        </div>
    </div>
}
